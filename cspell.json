{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "allowCompoundWords": true,
  "numSuggestions": 0,
  "validateDirectives": true,
  "enabledFileTypes": {
    "*": true
  },
  "enableGlobDot": true,
  "useGitignore": true,
  "ignorePaths": [
    ".git",
    ".gitignore",
    ".github",
    ".vscode",
    ".cursor",
    "node_modules",
    "bun.lock",
    "*.svg",
    "**/vendor/**",
    "CODEOWNERS",
    "drizzle",
    "app.html",
    "naver*.html",
    "apps/mobile/android",
    "apps/mobile/ios"
  ],
  "dictionaries": ["cspell.txt"],
  "dictionaryDefinitions": [
    {
      "name": "cspell.txt",
      "path": "./cspell.txt"
    }
  ]
}
