{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:window:allow-start-dragging",
    "core:window:allow-hide",
    "deep-link:default",
    "dialog:default",
    "opener:default",
    "process:default",
    "store:default",
    "updater:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://localhost:*" },
        { "url": "https://*.typie.dev" },
        { "url": "https://*.typie.co" }
      ]
    }
  ]
}