{
  "name": "@typie/monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "crates/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lefthook install",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint:eslint": "eslint --max-warnings 0 .",
    "lint:prettier": "prettier --check --ignore-unknown '**/*'",
    "lint:spellcheck": "cspell --no-progress --relative '**/*'",
    "lint:svelte": "turbo run lint:svelte",
    "lint:syncpack": "syncpack lint",
    "lint:typecheck": "turbo run lint:typecheck",
    "test": "turbo run test"
  },
  "overrides": {
    "canvas": "npm:-"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@typie/lintconfig": "workspace:*",
    "cspell": "^9.2.1",
    "eslint": "^9.37.0",
    "lefthook": "^1.13.6",
    "prettier": "^3.6.2",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.0"
}
